<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/oval_bg">

    <TextView
        android:id="@+id/poi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/poi_city"
        android:singleLine="true"
        android:text="Pizza"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/poi_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:text="monument"
        android:textAllCaps="false"
        android:textColor="@color/light_black" />

    <TextView
        android:id="@+id/poi_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poi_name"
        android:paddingTop="4dp"
        android:layout_marginLeft="8dp"
        android:paddingBottom="4dp"
        android:text="Bangalore"
        android:textColor="@color/light_black" />

    <Button
        android:id="@+id/poi_navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/poi_type"
        android:layout_alignBottom="@id/poi_type"
        android:layout_alignParentRight="true"
        android:background="@drawable/green_gradient"
        android:paddingLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="4dp"
        android:text="Get directions"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_below="@+id/poi_navi"
        android:layout_marginTop="8dp"
        android:background="@color/separator" />
</RelativeLayout>